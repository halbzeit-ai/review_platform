# Production Environment Configuration
# This file contains environment variables for the production server
# IMPORTANT: Update all placeholder values before deploying to production

# Application Settings
PROJECT_NAME="HALBZEIT Review Platform"
SECRET_KEY="CHANGE-THIS-TO-SECURE-PRODUCTION-SECRET-KEY"
API_V1_STR="/api"
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Database Configuration (Production PostgreSQL)
DATABASE_URL="postgresql://review_user:SECURE-PASSWORD@localhost:5432/review-platform"

# Production Server Ports
FRONTEND_PORT=80
BACKEND_PORT=8000

# Datacrunch.io Production Configuration
DATACRUNCH_CLIENT_ID="your-production-client-id"
DATACRUNCH_CLIENT_SECRET="your-production-client-secret"
DATACRUNCH_API_BASE="https://api.datacrunch.io/v1"
DATACRUNCH_SHARED_FILESYSTEM_ID="ef23bde1-085b-4482-8d73-3fd9950af3e4"
DATACRUNCH_SSH_KEY_IDS="your-ssh-key-ids"
SHARED_FILESYSTEM_MOUNT_PATH="/mnt/CPU-GPU"

# Production GPU Configuration
GPU_INSTANCE_HOST="135.181.63.133"
GPU_INSTANCE_USER="root"
GPU_INSTANCE_SSH_KEY_PATH="/root/.ssh/id_rsa"

# Production Email Configuration (Hetzner)
SMTP_SERVER="mail.halbzeit.ai"
SMTP_PORT=587
SMTP_USERNAME="registration@halbzeit.ai"
SMTP_PASSWORD="your-email-password"
FROM_EMAIL="registration@halbzeit.ai"
FROM_NAME="HALBZEIT AI Review Platform"
FRONTEND_URL="https://your-production-domain.com"

# Production Features
DEBUG=false
LOG_LEVEL="WARNING"
ENABLE_CORS=false

# File Upload Settings
MAX_UPLOAD_SIZE=1073741824  # 1GB
UPLOAD_PATH="/mnt/CPU-GPU/uploads"

# Cache Settings
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL=86400  # 24 hours for production

# Production Security
ALLOWED_HOSTS="your-production-domain.com,your-production-ip"
SSL_REQUIRED=true
SECURE_COOKIES=true

# Production Monitoring
ENABLE_MONITORING=true
SENTRY_DSN=""  # Add Sentry URL for error tracking
LOG_FILE="/var/log/review-platform/app.log"

# Production Performance
WORKERS=4
WORKER_TIMEOUT=300
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100