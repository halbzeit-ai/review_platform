# Staging Environment Configuration
# This file contains environment variables for the staging environment (on development server)

# Application Settings
PROJECT_NAME="HALBZEIT Review Platform - Staging"
SECRET_KEY="staging-secret-key-different-from-production"
API_V1_STR="/api"
ACCESS_TOKEN_EXPIRE_MINUTES=480  # 8 hours for staging

# Database Configuration (Staging PostgreSQL on dev server)
DATABASE_URL="postgresql://staging_user:staging_password@localhost:5432/review_staging"

# Staging Server Ports (Different from development)
FRONTEND_PORT=3001
BACKEND_PORT=8001

# Datacrunch.io Staging Configuration (Same as dev, different database)
DATACRUNCH_CLIENT_ID=""
DATACRUNCH_CLIENT_SECRET=""
DATACRUNCH_API_BASE="https://api.datacrunch.io/v1"
DATACRUNCH_SHARED_FILESYSTEM_ID="your-dev-filesystem-id"
DATACRUNCH_SSH_KEY_IDS=""
SHARED_FILESYSTEM_MOUNT_PATH="/mnt/dev-CPU-GPU"

# Staging GPU Configuration (Same GPU as development)
GPU_INSTANCE_HOST="135.181.71.17"
GPU_INSTANCE_USER="root"
GPU_INSTANCE_SSH_KEY_PATH="/root/.ssh/id_rsa"

# Staging Email Configuration (Use test SMTP)
SMTP_SERVER="localhost"
SMTP_PORT=1025  # Use MailHog or similar
SMTP_USERNAME=""
SMTP_PASSWORD=""
FROM_EMAIL="staging@halbzeit.ai"
FROM_NAME="HALBZEIT AI Staging"
FRONTEND_URL="http://dev-server-ip:3001"

# Staging Features
DEBUG=false
LOG_LEVEL="INFO"
ENABLE_CORS=true

# File Upload Settings
MAX_UPLOAD_SIZE=1073741824  # 1GB
UPLOAD_PATH="/tmp/staging-uploads"

# Cache Settings
REDIS_URL="redis://localhost:6379/1"  # Different Redis DB from dev
CACHE_TTL=1800  # 30 minutes for staging

# Staging-specific flags
RUN_AUTOMATED_TESTS=true
ENABLE_PERFORMANCE_MONITORING=true